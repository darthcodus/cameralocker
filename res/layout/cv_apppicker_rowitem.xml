<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/apppicker_rowitem_appicon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/AppIcon" />

    <TextView
        android:id="@+id/apppicker_rowitem_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginEnd="10dip"
        android:layout_toLeftOf="@+id/apppicker_rowitem_switch"
        android:layout_toStartOf="@+id/apppicker_rowitem_switch"
        android:layout_toRightOf="@id/apppicker_rowitem_appicon"
        android:layout_toEndOf="@id/apppicker_rowitem_appicon"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <org.holoeverywhere.widget.Switch
        xmlns:holo="http://schemas.android.com/apk/res-auto"
        android:id="@id/apppicker_rowitem_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        holo:textOff="@string/applistitem_switch_off"
        holo:textOn="@string/applistitem_switch_on" />

</RelativeLayout>
